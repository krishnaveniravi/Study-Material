def mrg(s1,s2,d):
    l = len(s1) + len(s2)
    s3=''
    j,k=0,0
    for i in range(l-d):
        if i%2==0:
            s3=s3+s1[j]
            j=j+1
        else:
            s3=s3+s2[k]
            k=k+1
    return s3

s1='Bye'
s2='Hello'
if len(s1)>len(s2):
    d=len(s1)-len(s2)
    print(mrg(s1,s2,d)+s1[-d:])
elif len(s2)>len(s1):
    d=len(s2)-len(s1)
    print(mrg(s1,s2,d)+s2[-d:])
else:
    d=len(s1)-len(s2)
    print(mrg(s1,s2,d))

