def largest_char(string1):
    largest = string1[0]
    for s in string1:
        if s > largest:
            largest = s
    return largest

string1=input('Enter the string:')  #largest
l=len(string1)
new_string=''
for s in range(l):
    largest=largest_char(string1)
    new_string=new_string+largest
    j = string1.index(largest)
    string1=string1[0:j]+string1[j+1:]
