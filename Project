import datetime
import pandas as pd
import smtplib

myemail=''
password=''

def sendemail(email,name):
    message=f"Dear {name}\nHappy Birthday!\nMay your day be filled with love and joy.\n\nKrishnaveni R."

    with smtplib.SMTP('smtp.gmail.com') as connection:
        connection.starttls()
        connection.login(user=myemail,password=password)
        connection.sendmail(from_addr=myemail,to_addrs=email,msg=f'Subject:Birthday Wish!\n\n{message}')

    
now=datetime.datetime.now()
month=now.month
#print(month)
day=now.day

#read csv file using pandas
birthday=pd.read_csv('Birthday_list.csv')
#print(birthday)

for index,item in birthday.iterrows():
    if day==item['Day'] and month==item['Month']:
        sendemail(email=item[str('email')],name=item['name'])
print('Mail Sent Successfully!')
